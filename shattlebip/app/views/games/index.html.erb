
<% if @my_joinable_games %>
  <h2>Here are all the games you can join!</h2>
    <ul>
  	  <% @my_joinable_games.each do |game| %>
  	    <li>
  	      <%= game.name %>
  	      <%= form_for @board do |f| %>
  	        <%= f.hidden_field :game_id, value: game.id %>  
  	        <%= f.hidden_field :user_id, value: session[:user_id] %>
  	        <%= f.submit "Join game" %>
  	      <% end %>
  	  </li>
  	  <% end %>
    </ul>
<% end %>

<% if @my_waiting_games %>
  <h2>Here are all the games you are waiting for people to join!</h2>
    <ul>
  	  <% @my_waiting_games.each do |game| %>
  	    <li>
  	      <%= link_to game.name, edit_game_board_path(game, game.boards[0]) %>
  	    </li>
  	  <% end %>
    </ul>
<% end %>

<% if @my_active_games%>
  <h2>Here are your active games!</h2>
    <ul>
  	  <% @my_active_games.each do |game| %>
  	    <li><%= game.name %></li>
  	  <% end %>
    </ul>
<% end %>
