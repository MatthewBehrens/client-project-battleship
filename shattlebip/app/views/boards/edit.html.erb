<h2>place your boats</h2>

<section class="ocean-view">

<div class="grid">

<% 0.upto 9 do |row| %>

<div class="row r_<%= row %>" >

    <% 0.upto 9 do |column| %>
        <div class="col c_<%= column %>" >
          <div class="cell" id="cell_<%= row %><%= column %>">

          </div>
        </div>
    <% end %>

</div>

<% end %>

</div>

</section>

<section class="boat-dock">

<% @boats.each do | boat | %>
  <div><h3><%= boat.name %></h3></div>

  <%= simple_form_for boat do |f| %>
    <%= f.error_notification %>
    <%= f.text_field :board_id %>
    <%= f.text_field :bow_index %>
    <%= f.text_field :stern_index %>
    <%= f.button :submit, "boat_me" %>
  <% end %>

 

<% end %>



</section>